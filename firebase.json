{
  "database": {
    "rules": "json"
  },
  "hosting": {
    "public": "pubdir",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 1978
    },
    "database": {
      "port": 1977
    },
    "hosting": {
      "port": 5020
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  },
  "remoteconfig": {
    "template": "remo_config"
  }
}
